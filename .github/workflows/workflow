name: Implementar proyecto Vite en GitHub Pages

on:
  # Se ejecuta en anotaciones dirigidas a la rama predeterminada
  push:
    branches:
      - main

  # Te permite ejecutar este flujo de trabajo manualmente desde la pestaña Acciones
  workflow_dispatch:

# Establece los permisos de GITHUB_TOKEN para permitir la implementación en GitHub Pages
permissions:
  contents: read
  pages: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2
      
      - name: Install Node.js
        uses: actions/setup-node@v2
        with:
          node-version: 16

      - name: Install Vite
        run: npm install -g create-vite@latest
      
      - name: Install dependencies
        run: npm install
      
      - name: Build Vite project
        run: npm run build

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          publish_dir: dist # Directorio de compilación de Vite
          publish_branch: gh-pages # Rama en la que se desplegará la página
          cname: your-custom-domain.com # Opcional: si tienes un dominio personalizado
          github_token: ${{ secrets.GITHUB_TOKEN }}
